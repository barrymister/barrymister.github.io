---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Barry Mister's Personal Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Merriweather&family=Libre+Franklin:wght@400;600&display=swap" rel="stylesheet">
		<!-- Global styles -->
		<link rel="stylesheet" href="../styles/global.css" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen">
		<div class="container max-w-3xl mx-auto px-4 py-8">
			<header class="mb-8">
				<nav class="flex justify-between items-center">
					<a href="/" class="text-xl font-semibold">Barry Mister</a>
					<div class="space-x-4">
						<a href="/posts">Posts</a>
						<a href="https://substack.com/@barrymister" target="_blank" rel="noopener noreferrer">Substack</a>
					</div>
				</nav>
			</header>
			<main>
				<slot />
			</main>
			<footer class="mt-16 py-8 text-center text-sm">
				Â© {new Date().getFullYear()} Barry Mister
			</footer>
		</div>
	</body>
</html>
