---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Barry Mister's Personal Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen font-['Inter']">
		<div class="max-w-3xl mx-auto px-4 py-8">
			<header class="mb-8">
				<nav class="flex justify-between items-center">
					<a href="/" class="text-xl font-semibold hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Barry Mister</a>
					<div class="space-x-4">
						<a href="/posts" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Posts</a>
						<a href="https://substack.com/@barrymister" target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Substack</a>
					</div>
				</nav>
			</header>
			<main>
				<slot />
			</main>
			<footer class="mt-16 py-8 border-t border-gray-200 dark:border-gray-800 text-center text-sm text-gray-600 dark:text-gray-400">
				Â© {new Date().getFullYear()} Barry Mister
			</footer>
		</div>
	</body>
</html>
