---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} - Barry Mister`}>
  <article class="prose prose-lg max-w-none">
    <header class="mb-8">
      <h1 class="text-primary mb-2">{frontmatter.title}</h1>
      <time class="text-text">
        {new Date(frontmatter.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
      {frontmatter.description && (
        <p class="mt-4 text-text text-xl">{frontmatter.description}</p>
      )}
    </header>
    <slot />
  </article>
</Layout>
