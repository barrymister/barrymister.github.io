---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const posts = await getCollection('posts');
const recentPosts = posts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<Layout title="Barry Mister - Personal Website">
  <section class="space-y-8">
    <div class="prose prose-lg max-w-none">
      <h1 class="text-4xl font-bold mb-4">Welcome</h1>
      <p class="text-xl">
        Hi, I'm Barry. This is my personal corner of the internet where I occasionally share thoughts and updates.
        For more frequent content, check out my <a href="https://substack.com/@barrymister" target="_blank" rel="noopener noreferrer">Substack</a>.
      </p>
    </div>

    <div class="mt-12">
      <h2>Recent Posts</h2>
      <div class="space-y-6">
        {recentPosts.map(post => (
          <article class="article-card hover:transform hover:-translate-y-1 transition-transform duration-200">
            <a href={`/posts/${post.slug}`} class="block">
              <h3 class="text-xl font-semibold mb-2">
                {post.data.title}
              </h3>
              <time class="text-sm">
                {new Date(post.data.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.data.description && (
                <p class="mt-2">{post.data.description}</p>
              )}
            </a>
          </article>
        ))}
      </div>
      
      <div class="mt-8">
        <a href="/posts" class="button">
          View all posts
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 inline" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
