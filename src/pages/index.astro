---
import Layout from '../layouts/Layout.astro';

const recentPosts = await Astro.glob('../content/posts/*.{md,mdx}').then(posts => {
  return posts
    .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
    .slice(0, 3);
});
---

<Layout title="Barry Mister - Personal Website">
  <section class="space-y-8">
    <div class="prose dark:prose-invert max-w-none">
      <h1 class="text-4xl font-bold mb-4">Welcome</h1>
      <p class="text-xl text-gray-700 dark:text-gray-300">
        Hi, I'm Barry. This is my personal corner of the internet where I occasionally share thoughts and updates.
        For more frequent content, check out my <a href="https://substack.com/@barrymister" target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline">Substack</a>.
      </p>
    </div>

    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6">Recent Posts</h2>
      <div class="space-y-6">
        {recentPosts.map(post => (
          <article class="group">
            <a href={post.url} class="block">
              <h3 class="text-xl font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                {post.frontmatter.title}
              </h3>
              <time class="text-sm text-gray-600 dark:text-gray-400">
                {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.frontmatter.description && (
                <p class="mt-2 text-gray-700 dark:text-gray-300">{post.frontmatter.description}</p>
              )}
            </a>
          </article>
        ))}
      </div>
      
      <div class="mt-8">
        <a href="/posts" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
          View all posts
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>
